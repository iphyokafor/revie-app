{
    "name": "Revie-App",
    "version": "1.0.0",
    "description": "Revie is a hypothetical platform where users can sign up with their basic information and post reviews about apartments they've previously lived in.",
    "main": "server.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon --exec babel-node  ./src/server.js",
        "lint": "eslint src/  --fix",
        "clean": "rm -rf build && mkdir build",
        "build-babel": "babel ./src --out-dir ./build",
        "build": "npm run clean && npm run build-babel",
        "start": "npm run build && node ./build/server.js",
        "test": " cross-env NODE_ENV=test nyc --reporter=text --reporter=html mocha --require @babel/register src/test/index.js --timeout 10000 --recursive --exit || true",
        "coverage": "nyc npm run test && nyc report --reporter=text-lcov | coveralls",
        "seed": "babel-node ./src/seeders/seeders.js"
    },
    "keywords": [
        "NodeJs",
        "Express",
        "MongoDB"
    ],
    "author": "Sandra Okafor",
    "license": "ISC",
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.5",
        "cookie-session": "^1.4.0",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-fileupload": "^1.2.1",
        "faker": "^5.4.0",
        "http-errors": "^1.8.0",
        "joi": "^17.3.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.11",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.11.5",
        "@babel/core": "^7.11.5",
        "@babel/node": "^7.10.5",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@babel/register": "^7.11.5",
        "@babel/runtime": "^7.11.2",
        "babel-eslint": "^10.1.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.12.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsdoc": "^30.7.3",
        "mocha": "^8.1.3",
        "mocha-lcov-reporter": "^1.3.0",
        "nodemon": "^2.0.4",
        "nyc": "^15.1.0",
        "sinon": "^9.0.3",
        "sinon-chai": "^3.5.0"
    }
}